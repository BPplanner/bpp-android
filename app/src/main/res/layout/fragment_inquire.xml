<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="12dp" />

    <LinearLayout
            android:id="@+id/layout_none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical">

        <ImageView
                android:layout_width="140dp"
                android:layout_height="88dp"
                android:src="@drawable/ic_reservation_none" />

        <TextView
                style="@style/Text.Basic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="문의 중인 스튜디오가 없어요" />

        <TextView
                style="@style/Text.Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="마음에 드는 스튜디오를 예약해보세요"
                android:textColor="#8c8c8c" />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_none"
                style="@style/Text.Basic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_button"
                android:paddingHorizontal="24dp"
                android:paddingVertical="6dp"
                android:text="스튜디오 보러가기"
                android:textColor="@color/white" />
    </LinearLayout>

</FrameLayout>
