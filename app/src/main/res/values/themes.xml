<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bpp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Text">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Text.Tab">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Title">
        <item name="android:fontFamily">@font/noto_sans_semi_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="lineSpacing">5sp</item>
    </style>
    <style name="Text.Content">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Text.Emphasize">
        <item name="android:fontFamily">@font/noto_sans_semi_bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Text.Basic">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Text.Date">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Text.Small">
        <item name="android:fontFamily">@font/noto_sans_regular</item>
        <item name="android:textSize">13sp</item>
    </style>


    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>